<h1>Index Employee</h1>
<p>List all employees</p>

<table>
	<tr>
		<th>Name</th>
		<th>Contract ID</th>
		<th colspan="3">Management</th>
	</tr>

	<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.name %></td>
			<td><%= employee.contract_ID %></td>
			<td><%= link_to 'Show', employee_path(employee) %></td>
			<td><%= link_to 'Edit', edit_employee_path(employee) %></td>
			<td><%= link_to 'Destroy', employee_path(employee),
					method: :delete,
					data: {confirm: "Are you sure?" } %></td>
		</tr>
	<% end %>
</table>

<br><%= link_to 'Back', home_index_path %>